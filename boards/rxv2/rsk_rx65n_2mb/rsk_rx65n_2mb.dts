/dts-v1/;

#include <R5F565NE.dtsi>

/ {
	model = "Renesas RSK+RX65N-2MB KIT";
	compatible = "renesas,rsk_rx65n_2mb","renesas,rxv2";

	chosen { // parameters chosen by system firmware at boot time
		zephyr,sram = &sram0;
		zephyr,console = &uart0;
		zephyr,flash = &flash0;
		//zephyr,code-partition = &slot0_partition;
		//zephyr,shell-uart = &uart0;
		//zephyr,uart-pipe = &uart0;
		//bootargs = <boot args here, e.g. "root=/dev/sda2" or "consoleblank=0 root=/dev/mmcblk0p2 rw rootwait earlyprintk">; // check if: required
		//stdout-path = "serial0:115200n8"; // check if: required
	};

	leds {
		compatible = "gpio-leds";
		green_led: led_0 {
			gpios = <&port7 3 GPIO_ACTIVE_HIGH>;
			label = "LED 0 (green)"; 
		}; 
		orange_led: led_1 {
			gpios = <&portg 7 GPIO_ACTIVE_HIGH>;
			label = "LED 1 (orange)"; 
		}; 
		red_led_1: led_2 {
			gpios = <&portg 6 GPIO_ACTIVE_HIGH>;
			label = "LED 2 (red)"; 
		}; 
		red_led_2: led_3 {
			gpios = <&portg 5 GPIO_ACTIVE_HIGH>;
			label = "LED 3 (red)"; 
		}; 	
		
	};

	aliases { 
		led0 = &green_led;
		// led1 = &orange_led;
		// led2 = &red_led_1;
		// led3 = &red_led_2;
		//	cpu0 = &cpu0;
		//	uart0 = &uart0; // SCI0
		//	uart1 = &uart1; // SCI1
		//	uart2 = &uart2; // SCI2	
		//	sysclk = &sysclk;
		//	timer0 = &timer0; // TPU0
		//	port0 = &port0; // PORT0
		//	port1 = &port1; // PORT1
		//	port2 = &port2; // PORT2
		//	spi0 = &spi0; // SCI3
		//	spi1 = &spi1; // SCI4
		//	spi2 = &spi2; // SCI5				
		//	ethernet0 = &ethernet0;
		//	ethernetphy0 = &ethernetphy0;		
		//	sw0 = &user_button;
	};
	
	// renesas_gpio_header: connector { // check if: correct (from "arduino_r3_connector.dtsi")
	// 	compatible = "renesas,rx-gpio";
	// 	#gpio-cells = <2>;
