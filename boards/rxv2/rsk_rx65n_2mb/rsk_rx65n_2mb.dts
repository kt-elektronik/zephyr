/dts-v1/;

#include <R5F565NE.dtsi>

/ {
	model = "Renesas RSK+RX65N-2MB KIT";
	compatible = "renesas,rsk_rx65n_2mb","renesas,rxv2";

	chosen { /* parameters chosen by system firmware at boot time */
		zephyr,sram = &sram1;
		zephyr,console = &sci8;
		zephyr,flash-controller = &data_flash;
		/* zephyr,code-partition = &slot0_partition; */
		zephyr,shell-uart = &sci8;
		/* TODO: check if: required
		 * zephyr,uart-pipe = &uart0;
		 * bootargs = <boot args here,
		 * e.g. "root=/dev/sda2" or
		 * "consoleblank=0 root=/dev/mmcblk0p2 rw rootwait earlyprintk">;
		 * stdout-path = "serial0:115200n8";
		 */
		rx65n,tick-timer = &cmtw0;
		rx65n,cycle-timer = &cmtw1;
	 };

	leds {
		compatible = "gpio-leds";
		green_led: led_0 {
			gpios = <&port7 3 GPIO_ACTIVE_HIGH>;
			label = "LED 0 (green)";
		};
		orange_led: led_1 {
			gpios = <&portg 7 GPIO_ACTIVE_HIGH>;
			label = "LED 1 (orange)";
		};
		red_led_1: led_2 {
			gpios = <&portg 6 GPIO_ACTIVE_HIGH>;
			label = "LED 2 (red)";
		};
		red_led_2: led_3 {
			gpios = <&portg 5 GPIO_ACTIVE_HIGH>;
			label = "LED 3 (red)";
		};

	};

	gpio_keys {
		compatible = "gpio-keys";
		user_switch1: sw1 {
			gpios = <&port0 3 GPIO_ACTIVE_LOW>;
			label = "SW1";
		};
		user_switch2: sw2 {
			gpios = <&port0 5 GPIO_ACTIVE_LOW>;
			label = "SW2";
		};
		user_switch3: sw3 {
			gpios = <&port0 7 GPIO_ACTIVE_LOW>;
			label = "SW3";
		};
	};

	aliases {
		led0 = &green_led;
		led1 = &orange_led;
		led2 = &red_led_1;
		led3 = &red_led_2;
		sw0 = &user_switch1;
		sw1 = &user_switch2;
		sw2 = &user_switch3;
	};

};

&sci8 {
	status = "okay";
	current-speed = <19200>;
	pinmuxs = <&pinmuxj 1 10>, <&pinmuxj 2 10>;
	gpios = <&portj 1 GPIO_PERIPHERAL>, <&portj 2 GPIO_PERIPHERAL>;
};

